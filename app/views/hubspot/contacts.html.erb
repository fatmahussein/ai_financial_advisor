<h1 class="text-2xl font-bold mb-4">HubSpot Contacts</h1>

<% if @contacts.present? %>
  <table class="min-w-full bg-white shadow rounded-lg overflow-hidden border border-gray-200">
    <thead class="bg-gray-100 text-left">
      <tr>
        <th class="px-4 py-2">First Name</th>
        <th class="px-4 py-2">Last Name</th>
        <th class="px-4 py-2">Email</th>
        <th class="px-4 py-2">Created At</th>
        <th class="px-4 py-2">Updated At</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr class="border-t">
          <td class="px-4 py-2"><%= contact["properties"]["firstname"] %></td>
          <td class="px-4 py-2"><%= contact["properties"]["lastname"] %></td>
          <td class="px-4 py-2"><%= contact["properties"]["email"] %></td>
          <td class="px-4 py-2"><%= contact["createdAt"].to_time.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="px-4 py-2"><%= contact["updatedAt"].to_time.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No contacts found.</p>
<% end %>
